<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" type="text/css" href="/static/style.css">
  <title>Cocktails</title>
</head>
<body>
  <h1>Our cocktails</h1>
  <a href="/">all</a>
  <% alcoholList.forEach(function(alcohol){ %>
    <a href=<%= '?alcohol=' + alcohol %>><%= alcohol %></a>
  <% }); %>

  <p>Selected option: 
      <% if(qs.alcohol != null){ %>
      <%= qs.alcohol %>
      <% }else { %>
      <%= 'all' %>
      <% }; %></p>

  <table>
      <tr>
        <th>NAME</th>
        <th>PRICE</th>
      </tr>
          <% cocktails.forEach(function(cocktail){ %>
            <% if(cocktail.contains.includes(qs.alcohol) || qs.alcohol == null){ %>
              <tr>
                <td><%= cocktail.name %><% if(!cocktail.isAlcoholic){ %>
                  <%= '(non alcoholic)' %>
                <%  }; %>
                <br><%= cocktail.contains %></td>
                <td><%= cocktail.price %></td>
            </tr>
          <% }}); %>
    </table>
  
</body>
</html>